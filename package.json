{
  "name": "opencode-stt",
  "version": "0.1.0",
  "description": "OpenCode plugin for speech-to-text via Handy API",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun build index.ts --outdir dist --target bun && tsc --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "opencode",
    "opencode-plugin",
    "speech-to-text",
    "stt",
    "dictation"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/belohnung/opencode-handy-stt.git"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^0.1.0"
  }
}
